@using STEM_Net.Models
@model Sensor

<div id="historical-data-modal-content" class="container">
    <div class="row">
        <div class="col-3 modal-left-pane">
            <div class="container">
                <div class="row">
                    <div class="fixed">
                        <img src="~/img/popup-icon.png" style="height: 2.5rem;" />
                    </div>
                    <div class="col">
                        <h4>STREET TREE: @Model.Name</h4>
                        <h5>ID: @Model.DeviceId</h5>
                    </div>
                </div>
                <div class="row">
                    <form style="width:100%">
                        <fieldset>
                            <fieldset class="form-group">
                                <label for="select-species">Data Range</label>
                                <div class="row">
                                    <div class="col-6">
                                        
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset class="form-group">
                                <label for="select-species">Graphed Item</label>
                                <select id="select-species" class="form-control">
                                    <option>Average Moisture</option>
                                    <option>Average Moisture</option>
                                    <option>Average Moisture</option>
                                </select>
                            </fieldset>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-9 modal-right-pane">
            <canvas id="historical-chart"></canvas>
            <button id="historical-data-modal-x" type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>
